<Window x:Class="Proyecto.Pantalla9Reporte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pantalla9Reporte" Height="500" Width="800">
    <Grid>
        <Label Content="Ediciones al Personal" HorizontalAlignment="Left" Margin="282,26,0,0" VerticalAlignment="Top" Height="40" FontSize="20" FontWeight="Bold" Width="210"/>
        <TextBox x:Name="txtBuscar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" Margin="517,104,0,0" TextChanged="txtBuscar_TextChanged_1"/>
        <Label Content="Ingresar Nombre Apellido o CI para Busqueda:" HorizontalAlignment="Left" Margin="236,101,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgEdicion" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top" Height="263" Width="772" AutoGenerateColumns="False" MinColumnWidth="186">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Fecha_Edicion}" Header="Fecha de Edición"/>
                <DataGridTextColumn Binding="{Binding Persona_Editada}" Header="Persona Editada"/>
                <DataGridTextColumn Binding="{Binding Tipo_edicion}" Header="Tipo de Edición"/>
                <DataGridTextColumn Binding="{Binding Usario_Editor}" Header="Editado por"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
